<h2>Reset Password</h2>

<form id="form" method="post" action="/password/reset/<%= passwordResetHash%>" novalidate>
  <fieldset>
    <label for="password">New Password *</label>
    <input class="form-field <%if(passwordEmptyAlert==='true'||passwordInvalidAlert==='true'){%>red-border<%}%>" type="password" id="password" name="password">
    <span class="tooltip-form-alert <%if(passwordEmptyAlert==='true'){%>display-inline<%}%>" id="password-empty-alert">Please enter your password</span>
    <span class="tooltip-form-alert <%if(passwordInvalidAlert==='true'){%>display-inline<%}%>" id="password-invalid-alert">Password has invalid format</span>
    <span class="tooltip-form-alert" id="password-info">At least: 8 chars, one lower and one upper alpha chars, one number, one special char</span>
  </fieldset>

  <fieldset>
    <label for="confirmPassword">Confirm Password *</label>
    <input class="form-field <%if(confirmPasswordEmptyAlert==='true'||confirmPasswordMatchAlert==='true'){%>red-border<%}%>" type="password" id="confirmPassword" name="confirmPassword">
    <span class="tooltip-form-alert <%if(confirmPasswordEmptyAlert==='true'){%>display-inline<%}%>" id="confirmPassword-empty-alert">Please enter your password</span>
    <span class="tooltip-form-alert <%if(confirmPasswordMatchAlert==='true'){%>display-inline<%}%>" id="confirmPassword-match-alert">Passwords do not match</span>
  </fieldset>

  <button class="button" type="submit">Reset password</button>
</form>

<%if (modal === 'opened') {%>
  <div class="modal" id="modal">
    <div class="modal-content">
      <i class="fas fa-check modal-text"></i>
      <p class="modal-text">You password has been changed</p>
      <a href="/login"><button class="button" id="close-modal-button" type="button">Login</button></a>
    </div>
  </div>
<%}%>

<script src="/static/password_reset.js" defer></script>