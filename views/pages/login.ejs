<div class="container-fluid">
  <div class="col-4 offset-4">
    <div class="row mt-3 text-center">
        <h2>Log In</h2>
    </div>

    <form class="row" id="form" method="post" action="/login" novalidate>
      <div class="mb-3">
        <label for="email" class="form-label">Email Address *</label>
        <input type="email" class="form-control <%if(emailEmptyAlert==='true'||emailInvalidAlert==='true'||emailMissingAlert==='true'||emailUnconfirmedAlert==='true'){%>red-border<%}%>" id="email" name="email" value="<%if(email!==''){%><%= email%><%}%>">
        <div class="form-alert <%if(emailEmptyAlert==='true'){%>display-block<%}%>" id="email-empty-alert">Please enter your email address</div>
        <div class="form-alert <%if(emailInvalidAlert==='true'){%>display-block<%}%>" id="email-invalid-alert">Email address has invalid format</div>
        <div class="form-alert <%if(emailMissingAlert==='true'){%>display-block<%}%>" id="email-missing-alert">User with this email address does not exist</div>
        <div class="form-alert <%if(emailUnconfirmedAlert==='true'){%>display-block<%}%>" id="email-unconfirmed-alert">Please confirm your email address</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password *</label>
        <input type="password" class="form-control <%if(passwordEmptyAlert==='true'||passwordInvalidAlert==='true'||passwordIncorrectAlert==='true'){%>red-border<%}%>" id="password" name="password">
        <div class="form-alert <%if(passwordEmptyAlert==='true'){%>display-block<%}%>" id="password-empty-alert">Please enter your password</div>
        <div class="form-alert <%if(passwordInvalidAlert==='true'){%>display-block<%}%>" id="password-invalid-alert">Password has invalid format</div>
        <div class="form-alert <%if(passwordIncorrectAlert==='true'){%>display-block<%}%>" id="password-incorrect-alert">You have entered incorrect password</div>
      </div>

      <button class="btn btn-primary shadow d-block mx-auto w-50" type="submit">Log In</button>
    </form>

    <div class="row mt-3 text-center">
        <p>Don't have an account yet? <a href="/signup">Sign Up</a></p>
        <p><a href="/password/forgot">Forgot your password?</a></p>
    </div>
  </div>
</div>

<script src="/static/js/login.js" defer></script>